@model DesignPattern.CQRS.CQRSPattern.Results.GetProductUpdateQueryResult
@{
    ViewData["Title"] = "Update";
}


<div class="container">
    <br />
    <form method="post">
        <input type="hidden" asp-for="Id" />
        <label>Ürün Adı</label>
        <input type="text" asp-for="Name" class="form-control" />
        <br />

        <label>Ürün Stok</label>
        <input type="text" asp-for="Stock" class="form-control" />
        <br />

        <label>Ürün Fiyat</label>
        <input type="text" asp-for="Price" class="form-control" />
        <br />

        <label>Ürün Açıklama</label>
        <input type="text" asp-for="Description" class="form-control" />
        <br />
        <button type="submit" class="btn btn-success">Güncelle</button>
    </form>
</div>

